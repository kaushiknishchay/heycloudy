<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:padding="10dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cloud_backup_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewLastBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Backup: 09 Jul 2017"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewFilesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLastBackup"
            android:layout_marginTop="11dp"
            android:text="No of file backed up: 100"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>